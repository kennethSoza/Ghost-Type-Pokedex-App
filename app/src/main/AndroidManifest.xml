<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uca.ghostdex">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="edu.uca.ghostdex.ui.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_pok_mon_ghost_type_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pok_mon_ghost_type_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.GhostDex">
        <activity
            android:name="edu.uca.ghostdex.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>